<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/moon"
    tools:context="com.example.useri.myapplication4.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FARM2HOME"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:fontFamily="comic-sans"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="0dp"
    android:text="Enter Your Details "
    android:textColor="@color/white"
    android:textSize="24sp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:text="Name :"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="295dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="Enter your name"
            android:background="@drawable/backdround_rec_trans"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black_overlay" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:text="Number:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/mnum"
            android:layout_width="295dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/backdround_rec_trans"
            android:hint="Enter Mobile Number"
            android:textColor="#000"
            android:textColorHint="@color/black_overlay" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:text="Crops :"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:prompt="@string/dialog_cancel"
            android:spinnerMode="dropdown"
            android:background="@drawable/backdround_rec_trans"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:text="Location:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:prompt="@string/dialog_cancel"
            android:spinnerMode="dropdown"
            android:background="@drawable/backdround_rec_trans"
            />


    </LinearLayout>





    <Button
        android:id="@+id/button"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_login_two"
        android:clickable="true"
        android:padding="16dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />


</LinearLayout>