<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.useri.myapplication4.generalBlankFragment">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/post_out"
        android:contentDescription="@string/dialog_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:text="Item :"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/item"
            android:layout_width="295dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="Enter your item"
            android:background="@color/black_overlay"
            android:maxLines="1"
            android:textColor="#fff"
            android:textColorHint="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:text="Price:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="295dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/black_overlay"
            android:hint="Enter Your Price "
            android:textColor="#fff"
            android:textColorHint="#000" />

    </LinearLayout>
    <Button
        android:id="@+id/post"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/background_login_two"
        android:clickable="true"
        android:padding="16dp"
        android:text="Post"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>



</FrameLayout>
