<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3398FF"
    tools:context="com.example.useri.myapplication4.Main2Activity">



<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:src="@drawable/ic_whatshot_black_24dp"
    android:layout_gravity="center"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="30dp"
        android:text="SINGN UP "
        android:textColor="#fff"
        android:textSize="24sp"
         />
    <EditText
        android:id="@+id/editText_emailAddress"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_login"
        android:drawablePadding="16dp"
        android:drawableRight="@drawable/ic_person_outline_black_24dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="16dp"
        android:textColor="@color/black_overlay"
        android:textColorHint="@color/black_overlay" />

    <EditText
        android:id="@+id/password"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_login"
        android:drawablePadding="16dp"
        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="16dp"
        android:textColor="@color/black_overlay"

        android:textColorHint="@color/black_overlay" />

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bkgd_red_2"
        android:clickable="true"
        android:padding="16dp"
        android:text="SIGN IN"
        android:textAllCaps="false"
        android:textColor="#3398FF"
        android:textSize="18sp" />



</LinearLayout>