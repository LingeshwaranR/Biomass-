<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/cvv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/storyimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/about_git_hub"
            android:src="@drawable/post_out" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item :"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/storyitem"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black_overlay"

                android:text="@string/your_item_will_be_displayed_here"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:text="Price(per kg) :"/>


            <TextView
                android:id="@+id/storyprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black_overlay"

                android:text="@string/price"
                android:textSize="15sp" />

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:drawableRight="@drawable/ic_shopping_cart_black_24dp"
        android:textColor="#FEAF59"

        android:text="  Select Quantity"/>

    <Spinner
        android:id="@+id/quantity"
        android:layout_width="92dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/backdround_rec_trans"
        android:prompt="@string/dialog_cancel"
        android:spinnerMode="dropdown" />

</LinearLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>